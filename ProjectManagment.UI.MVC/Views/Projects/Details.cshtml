@model ProjectManagment.DATA.EF.Models.Project

@{
    ViewData["Title"] = Model.ProjectName + "Details";
}

<h1 class="px-4 pt-3" style="margin-left: 0.6em !important">@ViewData["Title"]</h1>

<div>
    @*<h4>Project</h4>*@
    <hr />
    <dl class="row" style="margin-left: 3em;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectCity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectCity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExelSheet)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.ExelSheet)*@
            <object data="~/Upload/@Model.ExelSheet" width="400px" height="250px"></object>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectManager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectManager.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProjectId" style="margin-left: 3.5em;">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
